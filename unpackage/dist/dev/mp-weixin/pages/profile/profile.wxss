
page{
	background-color: #f5f5f5;
}
.my-home {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: 350rpx;
	background: -webkit-linear-gradient(bottom,#bdcda2 10%,#7ccd7d 100%);
	background: linear-gradient(to top,#bdcda2 10%,#7ccd7d 100%);
	border-bottom-left-radius: 25rpx;
	border-top-right-radius: 25rpx;
}
.wx-userinfo {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: 200rpx;
	padding: 0 30rpx;
}
.wx-username text{
	color: #606060;
	font-size: 35rpx;
}
.img image {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	margin-right: 20rpx;
	border: 10rpx solid #999;
}
.wx-button {
	margin: 0 auto;
}
.wx-button .lg-title {
	color: #fff;
	font-size: 35rpx;
	margin-bottom: 25rpx;
}
.wx-button button {
	background:  -webkit-linear-gradient(left,#28a6f1 10%,#0e8dd7 80%);
	background:  linear-gradient(to right,#28a6f1 10%,#0e8dd7 80%);
	border: none;
	border-radius: 50rpx;
	font-size: 30rpx;
	color: #fff;
}
/* 图片 */
.my-instruce {
	margin: 25rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	/* background-color: #007AFF; */
}
.my-instruce .my-img {
	width: 100%;
	height: 100%;
	height: 300rpx;
	border-radius:15rpx;
	margin-bottom: 30rpx;
}
.my-img image {
	width: 100%;
	height: 100%;
	border-radius: 20rpx;
}
.my-instruce .my-mes {
	position: relative;
	height: 100rpx;
	line-height: 60rpx;
	margin-top: 20rpx;
	background-color: #fff;
	border-radius: 20rpx;
	font-size: 16px;
	color: #606060;
	font-weight: 600;
	padding: 20rpx;
	box-sizing: border-box;
}
.my-mes image {
	position: absolute;
	height: 50rpx;
	width: 50rpx;
	right: 30rpx;
}
.footer {
	height: 150rpx;
	line-height: 150rpx;
	text-align: center;
	color: #A8A8A8;
	font-size: 25rpx;
}

