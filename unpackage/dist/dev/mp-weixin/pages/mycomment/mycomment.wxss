
page {
	background-color: #f5f5f5;
}
.mes-list {
	margin: 15rpx;
}
.mes-num {
	margin-bottom: 25rpx;
}
.banner {
	background-color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 20rpx;
	margin-bottom: 20rpx;
	box-sizing: border-box;
	border-radius: 10rpx;
}
.shop-img {
	max-width: 50rpx;
}
.shop-img image{
	width: 50rpx;
}
.user-mes {
	position: relative;
}
.user-mes .shop-name {
	position: relative;
	font-size: 30rpx;
	color: #333;
	font-weight: 700;
	margin-bottom: 20rpx;
}
.shop-name image {
	width: 15rpx;
	height: 17rpx;
	padding-left: 20rpx;
}
.shop-name .utime {
	position: absolute;
	right: 0;
	font-size: 20rpx;
	color: #a8a8a8;
}
.user-mes .mesdata {
	font-size: 26rpx;
	color: #333;
	line-height: 1.5;
}
.user-mes .shop-mes {
	margin-top: 10rpx;
	font-size: 24rpx;
	color: #606060;
	line-height: 1.5;
	background-color: #f7f7f3;
	padding: 10rpx;
	border-radius: 5rpx;
}
.user-mes .del-mes {
	margin-top: 20rpx;

	font-size: 28rpx;
	color: #555555;
	height: 30rpx;
	width: 630rpx;
}
.del-mes .img {
	position: absolute;
	right: 0;
	bottom: 0;
}
.img:hover {
	color: #333333 !important;
}
.img:active {
	color: #7F7F7F !important;
}
.del-mes image {
	width: 30rpx;
	height: 30rpx;
	padding-right: 10rpx;
}
.shop-mes view {
	color: #a8a8a8;
	font-size: 27rpx;
}

