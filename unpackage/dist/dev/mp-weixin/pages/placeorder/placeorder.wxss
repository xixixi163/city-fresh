
page {
		background: #f4f4f4;
}
.place-view {
		background: #FFFFFF;
		margin: 20rpx;
		border-radius: 9rpx;
		padding: 35rpx 15rpx;
}
.no-addr {
		border: 1rpx solid #ffb000;
		width: 400rpx;
		height: 80rpx;
		line-height: 80rpx;
		border-radius: 50rpx;
		text-align: center;
		color: #ffb000;
		margin: 0 auto;
		font-size: 30rpx;
}

	/* 收货地址 */
.default-addr {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		font-size: 30rpx;
}
.default-addr .img {
		width: 40rpx;
		height: 40rpx;
		padding-right: 20rpx;
}
.img image {
		width: 100%;
		height: 100%;
}
.default-addr .addr-detail {
		-webkit-box-flex: 1;
		-webkit-flex-grow: 1;
		        flex-grow: 1;
		font-size: 30rpx;
}
.default-addr .user-detail {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
}
.user-detail text:nth-child(1) {
		padding-right: 10rpx;
}
.default-addr .addr-right {
		width: 40rpx;
		height: 40rpx;
}
.addr-right image {
		width: 100%;
		height: 100%;
}
.place-time {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		font-size: 30rpx;
		border-top: 1rpx solid #F4f4f4;
		padding-top: 35rpx;
		margin-top: 35rpx;
}
.place-time image {
		width: 40rpx;
		height: 40rpx;
		padding-right: 20rpx;
}
.goods-address {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
}
.goods-view {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
		height: 150rpx !important;
		overflow: hidden;
		margin-bottom: 15rpx;
		font-size: 30rpx;
}
.goods-view text {
		display: block;
}
.goods-view .goods-img {
		width: 200rpx;
		height: 150rpx;
		padding-right: 15rpx;
}
.goods-img image {
		width: 100%;
		height: 100%;
}
.goods-view .goods-title {
		-webkit-box-flex: 1;
		-webkit-flex-grow: 1;
		        flex-grow: 1;
}
.goods-title text:nth-child(1) {
		color: #333;
		font-size: 30rpx;
		font-weight: 700;
}
.goods-title text:nth-child(2) {
		color: #999999;
		font-size: 25rpx;
}
.goods-view .goods-price {
		font-size: 30rpx;
		color: #333333;
}
.delivery {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: end;
		-webkit-justify-content: flex-end;
		        justify-content: flex-end;
		font-size: 30rpx;
}

	/* 支付 */
.payment {
		background: #FFFFFF;
		height: 120rpx;
		position: fixed;
		left: 0;
		right: 0;
		bottom: 0;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
		padding: 0 30rpx;
}
.pay-left {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		font-size: 30rpx;
}
.pay-left text:nth-child(2) {
		font-weight: bold;
		font-size: 32rpx;
}
.pay-right {
		background: #07c160;
		color: #FFFFFF;
		padding: 20rpx 60rpx;
		font-size: 30rpx;
		border-radius: 7rpx;
}

