
.loading {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	
	background: #fff;
	z-index: 9999;
}
.loading view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 100%;
	height: 100%;
}
.loading image {
	width: 300px;
	height: 100px;
}
.loading text {
	font-size: 25rpx;
}

